<?xml version="1.0" encoding="utf-8" ?>
<Commands>
  <DefaultLocale value="en"/>
  
  <!-- name is both the code class name (/src/Commands) and the file name for localisation (Case sensitive) -->
  <!-- commands are the console text to execute the command. Seperate each alias for the command with a comma -->
  <!-- defaultpermissionlevel can be overridden in the Saves/serveradmin.xml file, 0=admin level, 1000=anyone -->

  <!-- ********* UTILITY ********* -->
  <Command name="BCHelp" commands="bc-help" defaultpermissionlevel="1000"/>
  <Command name="BCSettings" commands="bc-settings,set" defaultpermissionlevel="0"/>
  <Command name="BCMemTrash" commands="bc-trash" defaultpermissionlevel="0"/>
  <Command name="BCBroadcastAPI" commands="bc-api" defaultpermissionlevel="0"/>
  <Command name="BCChunkObserver" commands="bc-co" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCTask" commands="bc-task" defaultpermissionlevel="0"/>
  <Command name="BCTest" commands="bc-test" defaultpermissionlevel="0"/>

  <!-- ********* LIVE DATA ********* -->
  <Command name="BCPlayers" commands="bc-lp" defaultpermissionlevel="0" defaultoptions="online,strpos,pp" chathook="bc-lp" chatoptions="online filter=0,1,2 chat color=ff0000"/>
  <Command name="BCPlayerFiles" commands="bc-pdf,bc-pfinfo" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCLocation" commands="bc-loc,loc,pos" defaultpermissionlevel="1000" defaultoptions=""/>
  <Command name="BCAdmins" commands="bc-admins" defaultpermissionlevel="0" defaultoptions="pp"/>
  <Command name="BCEvents" commands="bc-events" defaultpermissionlevel="0" defaultoptions="pp"/>

  <!-- Aliases -->
  <Command name="BCPlayersGamestage" commands="bc-gs" defaultpermissionlevel="0" defaultoptions="online,pp" chathook="bc-gs" chatoptions="online chat color=ff0000"/>
  <Command name="BCPlayersId" commands="bc-id,bc-lpids" defaultpermissionlevel="0" defaultoptions="online,pp"/>
  <Command name="BCPlayersPosition" commands="bc-pos,bc-lppos" defaultpermissionlevel="0" defaultoptions="online,strpos,pp"/>

  <!-- Entities -->
  <Command name="BCEntities" commands="bc-le" defaultpermissionlevel="0" defaultoptions="strpos,pp" chathook="bc-le"/>

  <!-- World -->
  <Command name="BCActiveChunks" commands="bc-chunks,bc-cc" defaultpermissionlevel="0" defaultoptions="pp"/>
  <Command name="BCTime" commands="bc-time" defaultpermissionlevel="0" defaultoptions="1l"/>
  <Command name="BCGetSpawn" commands="bc-getspawn" defaultpermissionlevel="0" defaultoptions=""/>

  <!-- ************ GAME OBJECTS ************ -->
  <Command name="BCAssets" commands="bc-assets" defaultpermissionlevel="0" defaultoptions="csv"/>
  <Command name="BCGameObjects" commands="bc-go" defaultpermissionlevel="0" defaultoptions="pp"/>
  <Command name="BCHubCellData" commands="bc-lhcd,bc-hcd" defaultpermissionlevel="0" defaultoptions="nl"/>
  <Command name="BCVersions" commands="bc-version" defaultpermissionlevel="0" defaultoptions="pp"/>

  <!-- Admin Players & Entities -->
  <Command name="BCGiveBuffToEntity" commands="bc-geb,bc-gebuff" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCGiveBuffToPlayer" commands="bc-gpb,bc-gpbuff" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCGiveItemToPlayer" commands="bc-give" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCGiveQuestToPlayer" commands="bc-gpq,bc-gpquest" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCSetSkillOnPlayer" commands="bc-setskill,setskill" defaultpermissionlevel="0" defaultoptions=""/>

  <Command name="BCRemoveBuffFromEntity" commands="bc-reb,bc-debuff,bc-rembuff" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCRemoveBuffFromPlayer" commands="bc-rpb,bc-rpbuff" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCRemoveQuestFromPlayer" commands="bc-rpq,bc-rpquest" defaultpermissionlevel="0" defaultoptions=""/>

  <Command name="BCRemove" commands="bc-remove,remove" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCSpawn" commands="bc-spawn,spawn" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCHordeSpawners" commands="bc-showspawn,manager" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCTeleport" commands="bc-tele,move" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCSleeper" commands="bc-sleeper,sleeper" defaultpermissionlevel="0" defaultoptions=""/>
  
  <!-- World Editing -->
  <Command name="BCWorldBlocks" commands="bc-wblocks,block" defaultpermissionlevel="0" defaultoptions="loc"/>
  <Command name="BCImport" commands="bc-import,import" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCExport" commands="bc-export,export" defaultpermissionlevel="0" defaultoptions="loc"/>
  <Command name="BCVisitRegion" commands="bc-visitregion,visit" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCTileEntity" commands="bc-te,tile" defaultpermissionlevel="0" defaultoptions=""/>
  <Command name="BCReset" commands="bc-reset" defaultpermissionlevel="0" defaultoptions=""/>

</Commands>
